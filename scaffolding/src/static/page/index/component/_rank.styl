.c-rank
  position: relative
  margin-bottom: 30px

  table
    width: 100%
    table-layout: fixed
    background-color: #fff
  thead
    background: $gray-light
    padding: 10px
    border-bottom: 1px solid $gray-dark
  th, td
    text-align: center
    vertical-align: middle
  td
    font-size: 1.1rem
  th
    font-size: 11px
    text-align: center
    white-space: nowrap
    width: 40px
    height: 30px
  tbody
    tr
      height: 50px
    td
      border-bottom: 1px solid $gray-light

  .movie-title
    width: 35%
    position: absolute
    top: 0
    left: 0
    overflow: hidden
    th, td
      text-align: left
      padding-left: 10px
    td
      border-right: 1px solid #fff
    thead
      .more
        color: $blue
        font-size: 1rem
        text-decoration: none
        margin-left: 4px
        line-height: 30px
        display: inline-block

  .movie-data
    @extend $scrollY
    width: 65%
    margin-left: 34.9%
    thead
      .icon-down
        display: none
        vertical-align: middle
    th
      &.on
        .icon-down, .icon-down:before
          font-size: .9rem
          display: inline-block
      .text
        display: inline-block
        span
          display: block
          line-height: 1
    td
      &.boxoffice
        color: $blue-dark
        font-weight: 500

  .movie-item
    &:first-of-type, &:nth-of-type(2), &:nth-of-type(3)
      h3
        line-height: 20px
        height: 20px
        &:before
          content: ''
          float: left
          margin-top: -4px
          margin-right: 1%
          margin-left: -2px
      .name
        width: 78%
    &:first-of-type
      .hd
        h3
          &:before
            @extend .icon-first
    &:nth-of-type(2)
      .hd
        h3
          &:before
            @extend .icon-second
    &:nth-of-type(3)
      .hd
        h3
          &:before
            @extend .icon-third
    .hd
      .name
        font-weight: 500
        font-size: 1.2rem
      h3
        font-size: 1.1rem
        color: $title-font
        font-weight: normal
        overflow: hidden
        span
          overflow: hidden
          width: 100%
          text-overflow: ellipsis
          white-space: nowrap
          display: inline-block
        i
          float: left
          margin-top: 1px
        .top
          width: 84%
      p
        font-size: .9rem
        line-height: 1.5
        color: $base-font
        font-weight: 300
        &:last-of-type
          font-size: .9rem
          color: $base-font
        .light
          color: $yellow
      strong
        line-height: 1.3
        color: #666
        font-weight: 200
        font-size: 2.18rem
      small
        font-weight: normal
        font-size: 1.1rem

  .movie-items
    &:after
      border: 1px solid $gray-light
    tr
      &:active
        background-color: $active-bg
