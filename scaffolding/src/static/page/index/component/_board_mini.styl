.c-board-mini
  position: fixed
  width: 100%
  z-index: $z-high-1
  top: 80px
  left: 0
  height: 37px
  background-color: $blue-black
  color: #fff
  > .hd
    width: 100%
    height: 100%
    display: table
    padding: 0 12px
    h3, p
      display: table-cell
      width: 63%
      vertical-align: middle
    h3
      font-size: 1.2rem
      strong
        margin: 0 2px
        font-size: 1.5rem
      span
        &:last-child
          font-size: 1.5rem
    p
      width: 37%
      text-align: right
      font-size: 1.1rem
