$ico-arr
  content: ""
  position: absolute
  display: inline-block
  width: 6px
  height: 6px
  border: 1px solid #bbb
  border-left: none
  border-top: none
  transform: rotate(-45deg)

.icon-arrow-left
  &:before
    @extend $ico-arr
    transform: rotate(135deg) translate(0, -50%)

.icon-arrow-right
  &:after
    @extend $ico-arr
    transform: rotate(-45deg) translate(0, -50%)

.icon-arrow-down
  &:after
    @extend $ico-arr
    transform: rotate(45deg) translate(0, -50%)

.icon-arrow-top
  &:after
    @extend $ico-arr
    transform: rotate(-135deg) translate(0, -50%)

