.g-c-nav-share
  position: fixed
  z-index: 10000
  right: 15px
  bottom: 60px
  overflow: hidden
  width: 40px
  height: 40px
  border-radius: 10px
  border-radius: 10px
  background-color: rgba(0, 0, 0, 0.6)
  color: $white
  transition: 300ms all ease
  h4
    float: left
    width: 40px
    height: 40px
    margin: 0
    padding: 0
    text-align: center
    .close
      display: inline-block
      width: 100%
      height: 100%
      color: $white
    .icon-share
      display: block
      width: 40px
      height: 40px
      margin-top: 7px
      line-height: 1
      &:before
        color: $white
        font-size: 2.2rem

// 截图样式隐藏
.g-c-share-img
  .g-c-nav-share, footer
    display: none
    opacity: 0
