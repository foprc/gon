.g-c-cal-range
  height: 360px
  overflow-y: scroll
  padding-bottom: 20px

  .c-month
    border-bottom: 1px solid #ededed
    > .hd
      font-size: 1.2rem
      padding: 8px 0 10px
      text-align: center
    > .bd
      padding: 0 20px
      table
        table-layout: fixed
      tr
        height: 30px
        border-bottom: 0 none
      td
        text-align: center
        span
          display: block
          margin: 0 auto
          height: 20px
          width: 20px
          line-height: 20px
          vertical-align: middle
    .in-range
      .inner
        background: rgba(0,145,255,0.20)
        width: 100%
        color: #0092ff
    .start,
    .end
      .inner
        color: #fff
        // border-radius: 50%
        width: 20px
        background-color: #0092ff
    .start.in-range,
    .end.in-range
      position: relative
      &:after
        content: ''
        display: block
        height: 20px
        width: 50%
        background: rgba(0,145,255,0.20)
        position: absolute
        top: 5px
      .inner
        width: 20px
        position: relative
        z-index: 1
    .start.in-range
      &:after
        right: 0
    .start.in-range
      &:before
        left: 0
    .today
      color: #0092ff
    .disabled
      color: #999
