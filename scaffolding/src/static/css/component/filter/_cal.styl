.g-c-cal
  position: fixed
  left: 0
  width: 100%
  height: 100%
  background: rgba(0,0,0,0.5)
  z-index: $z-high-1
  // 日历头部
  .hd
    display: flex
    background: white
    height: 35px
    line-height: 35px
    border-top: 1px solid #e4e4e4
    border-bottom: 1px solid #e4e4e4
    .btn-prev,
    .btn-next
      flex: 1
      text-align: center
      font-size: .8rem
    h3
      flex: 3
      text-align: center
      font-size: 1.3rem
      font-weight: normal
  // 日期选择
  .bd
    width: 100%
    background: white
    table
      width: 100%
      table-layout: fixed
      tr
        display: flex
        padding: 5px 15px
        border-bottom: 1px solid #e4e4e4
        th
          position: relative
          text-align: center
          flex: 1
          font-size: 1.2rem
          font-weight: normal
        td
          position: relative
          flex: 1
          text-align: center
          margin: 0 10px
          width: 28px
          height: 28px
          line-height: @height
          border-radius: 50%
          font-size: 1.2rem
          &.today
            color: $main-color
          &.disable
            color: $light-font
            cursor: default
          &.on
            color: white
            background: $main-color
