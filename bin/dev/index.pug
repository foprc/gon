doctype html
html
  head
    meta(charset="utf-8")
    meta(http-equiv="X-UA-Compatible", content="IE=edge,chrome=1")
    meta(name="viewport", content="width=device-width, initial-scale=1, maximum-scale=1, user-scalable=no")
    meta(name="apple-mobile-web-app-capable", content="yes")
    meta(name="format-detection", content="telephone=no")
    meta(content="telephone=no", name="format-detection")
    link(rel="stylesheet" href="./dev/base.css")
    title Reverse Proxy Setting

  body.yue
    h3 Documents
    a(href="/doc/index", target="_blank") View

    h3 Reverse Proxy Setting
    p set #{data.domain} to 127.0.0.1 in /etc/hosts

    #react.mod
      div.mod-hd
        h4 React Version
      div.mod-bd
        ul#react-form
          li(data-val="minified")
            strong minified
          li(data-val="unminified")
            strong unminified

    #api.mod
      div.mod-hd
        h4 API
      div.mod-bd
        ul#api-form
          each name in Object.keys(data.be)
            if data.be[name]
              li(data-val=data.be[name])
                strong= name
                span= data.be[name]

    #web.mod
      div.mod-hd
        h4 Web
      div.mod-bd
        ul#web-form
          each name in Object.keys(data.fe)
            if data.fe[name]
              li(data-val=data.fe[name])
                strong= name
                span= data.fe[name]

    script(src="./dev/jquery-2.1.3.js")
    script(id="config", type="text/config") !{JSON.stringify(data, 0, 2)}
    script(src="./dev/main.js")
